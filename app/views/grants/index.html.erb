<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>補助金検索ページ</title>
</head>
<body>
  <br>
  <br>
  <h1><%= t('grants.search_page_title') %></h1>
  <p><%= t('grants.search_page_description') %></p>
  <br>
  <form id="searchForm" action="<%= grants_path %>" method="get">
    <label for="keyword"><%= t('grants.search_form_label') %>:</label>
    <input type="text" id="keyword" name="keyword">
    <button type="submit" class="btn btn-success"><%= t('grants.search_button') %></button>
  </form>

  <% if @grants %>
  <div id="searchResults">
    <h2><%= t('grants.search_results_title') %>:</h2>
    <% @grants.each do |grant| %>
      <p><%= grant['title'] %></p>
    <% end %>
    <div class="pagination-container">
      <%= paginate @grants if @count > 8 %>
    </div>
  </div>
<% elsif @error %>
  <p><%= @error %></p>
<% end %>

</body>
